<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_sks_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total SKS : "
            android:ems="10"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/total_sks"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/total_sks_view"
            android:textAlignment="center"
            android:background="@drawable/border"
            android:ems="10"
            android:textSize="18sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/total_bobot_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total Bobot : "
            android:ems="10"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/total_bobot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/total_bobot_view"
            android:textAlignment="center"
            android:background="@drawable/border"
            android:ems="10"
            android:textSize="18sp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/ipk_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="IPK : "
            android:ems="10"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/ipk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ipk_view"
            android:textAlignment="center"
            android:background="@drawable/border"
            android:ems="10"
            android:textSize="18sp">
        </TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="KEMBALI"
        android:textStyle="bold"/>

</LinearLayout>